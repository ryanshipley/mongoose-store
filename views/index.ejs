<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Index</title>
	</head>
	<body>
        
<nav>
	<a href="/products/new">Add a New Product</a>
</nav>

		<h1>Stock Page</h1>
		<ul>
			<% products.forEach(product => { %>
            <li><a href="/products/<%=product._id; %>"> <img src=<%=product.img; %>> </a></li>
			<form style="display:inline; margin-left:17px;" action="/products/<%= product.id %>?_method=DELETE" method="POST">
				<input type="submit" value="DELETE" />
			  </form>
			  <a href="/products/<%=product._id %>/edit">Edit</a>
			<% }) %>
		</ul>
	</body>
</html>